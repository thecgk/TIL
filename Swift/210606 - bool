import UIKit // Day1. 조건

var isDarkkMode : Bool = false // bool은 옳고 그름 두 가지 정보만 저장할 수 있는 1비트 자료형, 불을 지정하고 false값을 넣어줌.

// 이런 형식으로도 사용가능
// if isDarkMode == true
// if (isDarkMode == true)
if !isDarkkMode {
    print("다크모드 아닙니다.")
} else {
    print("다크모드 입니다.")
}

var title : String = !isDarkkMode ? "다크모드가 아닙니다." : "다크모드 입니다." // title이란 string형태의 변수에 !isDarkMode라는 변수를 넣어주고 ?로 옳으면 왼쪽 틀리면 오른쪽을 출력
print("title: \(title)")
